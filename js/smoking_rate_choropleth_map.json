{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": "Choropleth Map of Smoking Rates Across Countries in 2022",
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "Smoking_rate_selection",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 45,
        "step": 1,
        "name": "Smoking Rate: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightgrey",
        "strokeWidth": 1,
        "fill": null
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CaiHeShun/FIT3179A2/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'No specified smoking rate in ' + datum.properties.NAME + ', or smoking rate is an invalid value'",
          "as": "outlier"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "grey",
        "strokeWidth": 1
      },
      "encoding": {"tooltip": {"field": "outlier"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/CaiHeShun/FIT3179A2/main/data/smoking_rates_by_country_2024.csv"
      },
      "transform": [
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/CaiHeShun/FIT3179A2/main/js/ne_110m.json",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "filter": "datum.smokingRatesByCountry_rateBothPct2022 > Smoking_rate_selection"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "grey", "strokeWidth": 1},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "smokingRatesByCountry_rateBothPct2022",
          "type": "quantitative",
          "scale": {
            "domain": [10, 20, 30],
            "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
          },
          "title": "Smoking Rate (%)"
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {
            "field": "smokingRatesByCountry_rateBothPct2022",
            "type": "quantitative",
            "title": "Smoking rate (%)"
          }
        ]
      }
    },
    {
      "data": {
        "values": [
          {"longitude": 133.3, "latitude": -25, "text": "Australia"},
          {"longitude": 100, "latitude": 35, "text": "China"},
          {"longitude": 112.2, "latitude": 4.2, "text": "Malaysia"},
          {"longitude": -111, "latitude": 57.5, "text": "Canada"},
          {
            "longitude": 90,
            "latitude": -45,
            "text": "Australia has an smoking rate of 13.1%"
          }
        ]
      },
      "mark": {"type": "text", "fontStyle": "italic"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "text", "type": "nominal"}
      }
    }
  ],
  "config": {"view": {"stroke": "transparent"}}
}