{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 600,
  "title": "Smoking Rate vs. Most Sold Brand Cigarette Price",
  "data": {
    "url": "https://raw.githubusercontent.com/CaiHeShun/FIT3179A2/main/data/SmokingAndTobaccoData2018_Wrangled_Cleaned.csv"
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania",
          "Middle East"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania",
          "Middle East"
        ],
        "name": "Select Region: "
      }
    },
    {
      "name": "Cigarette_smoking_prevalence_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 45,
        "step": 1,
        "name": "Cigarette Smoking Prevalence: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.CigaretteSmokingPrevalence > 0"},
    {"filter": "datum.MostSoldBrandCigarettePrice > 0"},
    {"filter": "Region_selection == null || datum.Region == Region_selection"},
    {
      "filter": "datum.CigaretteSmokingPrevalence > Cigarette_smoking_prevalence_above"
    }
  ],
  "encoding": {
    "x": {
      "field": "CigaretteSmokingPrevalence",
      "type": "quantitative",
      "title": "Cigarette Smoking Prevalence (%)",
      "axis": {"tickCount": 7}
    },
    "y": {
      "field": "MostSoldBrandCigarettePriceAUD",
      "type": "quantitative",
      "title": "Price of Most Sold Brand (Local Currency)",
      "axis": {"tickCount": 6}
    }
  },
  "layer": [
    {
      "params": [{"name": "grid", "select": "interval", "bind": "scales"}],
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "CigaretteSmokingPrevalence",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10, 20, 30],
            "range": [10, 50, 150, 200, 300, 400, 500]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Region",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania",
              "Middle East"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628",
              "#da70d6"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "Country"},
          {
            "field": "CigaretteSmokingPrevalence",
            "type": "quantitative",
            "title": "Cigarette Smoking Prevalence (%)"
          },
          {
            "field": "MostSoldBrandCigarettePriceAUD",
            "type": "quantitative",
            "title": "Price (AUD)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 12,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Location", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Location'] == 'China' || datum['Location'] == 'New Zealand' || datum['Location'] == 'Australia' || datum['Location'] == 'Israel' || datum['Location'] == 'Belgium' || datum['Location'] == 'Malaysia' || datum['Location'] == 'Belarus' ||  datum['Location'] == 'Brazil'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Location", "type": "nominal", "title": "Country"},
          {
            "field": "CigaretteSmokingPrevalence",
            "type": "quantitative",
            "title": "Smoking Prevalence (%)"
          },
          {
            "field": "MostSoldBrandCigarettePriceAUD",
            "type": "quantitative",
            "title": "Price (AUD)"
          }
        ]
      }
    }
  ],
  "config": {}
}