{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/CaiHeShun/FIT3179A2/main/data/Smoking_Data_Cleaned.csv"
  },
  "hconcat": [
    {
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "color": {
              "field": "Percentage_Total_Smokers",
              "type": "quantitative",
              "title": "Percentage of Total Smokers",
              "scale": {
                "range": [
                  "#f9f9f9",
                  "#ffebcc",
                  "#ffd699",
                  "#ffb366",
                  "#ff8000",
                  "#ff3300",
                  "#cc0000",
                  "#660000"
                ]
              },
              "legend": null
            }
          }
        },
        {
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 5
          },
          "encoding": {
            "text": {
              "field": "Percentage_Total_Smokers",
              "type": "quantitative"
            }
          }
        }
      ],
      "transform": [{"filter": {"param": "brush"}}],
      "encoding": {
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": "-x",
          "title": null
        },
        "x": {
          "aggregate": "sum",
          "field": "Percentage_Total_Smokers",
          "type": "quantitative",
          "axis": null
        },
        "tooltip": [
          {
            "field": "Smokers_Total",
            "type": "quantitative",
            "title": "Total Smokers"
          }
        ]
      },
      "width": "150",
      "height": 1000
    },
    {
      "height": 200,
      "width": 50,
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["y"]}}
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": "-x",
          "axis": null
        },
        "x": {
          "aggregate": "sum",
          "field": "Percentage_Total_Smokers",
          "type": "quantitative",
          "axis": null
        },
        "color": {"value": "#660000"}
      }
    }
  ],
  "config": {"view": {"stroke": "transparent"}}
}
